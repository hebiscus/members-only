extends layout 

block content 
    h1= title 
    a(href="/") Go back to homepage
    form(method="POST" action="")
        label(for="title") Title:
        input(type="text" name="title")
        label(for="content") Content:
        input(type="text" name="content")
        button(type="submit") Submit
    if errors 
        ul
        each error in errors 
            li= error.msg