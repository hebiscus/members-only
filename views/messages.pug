extends layout

block content 
    h1 Messages
    if user 
        a(href='/messages/create') Create a message!
        div.messages-container   
            each message in messages
                div.message-container    
                    h3= message.title
                    h5= `By:` + " " + message.author.firstName + " " + message.author.lastName
                    p= message.content || "There's supposed to be a message here..."
                    p=`Created on: ${message.timestamp}`
                    if user.membershipStatus == "admin"
                        a(href=`messages/${message._id}/delete`) Delete
    else 
        div.messages-container
            each message in messages  
                div.message-container     
                    h3=message.title 
                    p=message.content
                    p Become a member to see who posted that!